<p id="notice"><%= notice %></p>

<h1>Post Ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Ingredient</th>
      <th>Amount</th>
      <th>Measure</th>
      <th>Ingr replica1</th>
      <th>Ingr replica2</th>
      <th>Ingr replica3</th>
      <th>Ingr replica4</th>
      <th>Ingr replica5</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_ingredients.each do |post_ingredient| %>
      <tr>
        <td><%= post_ingredient.post.name %></td>
        <td><%= post_ingredient.ingredient.ingredient %></td>
        <td><%= post_ingredient.amount %></td>
        <td><%= post_ingredient.measure %></td>
        <td><%= post_ingredient.ingr_replica1_id %></td>
        <td><%= post_ingredient.ingr_replica2_id %></td>
        <td><%= post_ingredient.ingr_replica3_id %></td>
        <td><%= post_ingredient.ingr_replica4_id %></td>
        <td><%= post_ingredient.ingr_replica5_id %></td>
        <td><%= link_to 'Show', post_ingredient %></td>
        <td><%= link_to 'Edit', edit_post_ingredient_path(post_ingredient) %></td>
        <td><%= link_to 'Destroy', post_ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

