<%= form_with(model: [:admin, collection]) do |f| %>
  <% if collection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(collection.errors.count, "error") %> prohibited this collection from being saved:</h2>

      <ul>
        <% collection.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <%= f.select :post_ids, Post.all.map{ |post| [post.name, post.id]},{}, { multiple: true} %>
  <div id="posts">
    <%= f.fields_for :posts do |post| %>
      <%= render 'post_fields', f: post %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'Добавить ингредиент', f, :posts %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
